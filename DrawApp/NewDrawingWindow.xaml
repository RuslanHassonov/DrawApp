        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawApp"
        mc:Ignorable="d"
        Title="Create a New Drawing" Height="170.233" Width="400">
    <Grid>
        <TextBox x:Name="tb_Drawing_Name" HorizontalAlignment="Left" Height="23" Margin="88,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="253"/>
        <Button x:Name="bt_AddNewDrawing" Content="New Drawing" HorizontalAlignment="Left" Margin="88,75,0,0" VerticalAlignment="Top" Width="100" Height="35" Click="bt_AddNewDrawing_Click"/>
        <Button x:Name="bt_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="241,75,0,0" VerticalAlignment="Top" Width="100" Height="35" Click="bt_Cancel_Click"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="48,30,0,0" VerticalAlignment="Top" Width="35"/>

    </Grid>
</Window>
